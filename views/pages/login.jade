extends ../layout

block content
	.col-md-12
	.panel.panel-default
		.panel-heading
		form.form-horizontal(role='form', name='userform', ng-submit='login()')
			.panel-body
				.form-group.row(ng-class="{'has-error':userform.username.$dirty&&userform.username.$invalid}")
					label.col-sm-offset-2.col-sm-2.control-label.text-right(for='username') 用户名
					.input-group.col-sm-4
						.input-group-addon
							span.glyphicon.glyphicon-user
						input#username.form-control(type='text', name='username', ng-model='user.username', placeholder='请输入用户名', ng-required='')
					.help-block.col-sm-4(ng-show='userform.username.$dirty && userform.username.$invalid')
						span.text-danger(ng-show='userform.username.$error.required') 请填写用户名
				.form-group.row(ng-class="{'has-error':userform.password.$dirty&&userform.password.$invalid}")
					label.col-sm-offset-2.col-sm-2.control-label.text-right(for='password') 密码
					.input-group.col-sm-4
						.input-group-addon
							span.glyphicon.glyphicon-lock
						input#password.form-control(type='password', name='password', ng-model='user.password', placeholder='请输入6~12位密码', ng-minlength='6', ng-maxlength='12', ng-required='')
					.help-block.col-sm-4(ng-show='userform.password.$dirty && userform.password.$invalid')
						span.text-danger(ng-show='userform.password.$error.required') 请填写密码
				.panel-footer.clearfix
					.col-sm-offset-5.col-sm-1
						button.btn.btn-lg.btn-primary.btn-enter(type='submit') 登录